---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import Linkedin from '../icons/Linkedin.astro';
import Mail from '../icons/Mail.astro';
import Github from '../icons/Github.astro';
import Experiencia from '../components/Experiencia.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../icons/Briefcase.astro';
import Code from '../icons/Code.astro';
---

<Layout title="Porfolio de PykeCat - Desarrollador y Programador Web"
description="Contrata a PykeCat para crear un pagina web. Desarrollador web. Especializado en React, AStro y Angular.">
	<main class="z-10 px-4">
		<SectionContainer class="py-44 pb-24">
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-10">
				Hola!, soy PykeCatL
					<a 
					href="https://www.linkedin.com/in/jose-andree-sanchez-tenaud/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center">
						<Badge>#Open to work</Badge>
					</a>					
			</h1>
			<h2 class="text-xl opacity-80 text-wrap max-w-[700px]">
				Desarrollador Web. De Lima, Perú. Especializado en crear diseños únicos 
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/jose-andree-sanchez-tenaud/">
					<Linkedin class="size-4 md:size-6"/>
					Linkdln
				</SocialPill>
				<SocialPill href="https://github.com/PykeMG">
					<Github class="size-4 md:size-6"/>
					GitHub
				</SocialPill>
				<SocialPill href="mailto:joseandree.j42@gmail.com">
					<Mail class="size-4 md:size-6"/>
					joseandree.j42@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experiencia" class="py-10">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
			<Briefcase class="size-7"/>
			Experiencia Laboral</h2>
			<Experiencia />
		</SectionContainer>
		<SectionContainer id="experiencia" class="py-10">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
			<Code class="size-7"/>
			Proyectos</h2>
			<Experiencia />
		</SectionContainer>
	</main>
</Layout>
 